# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=socger
DB_DATABASE=socgerfleet

# En donde pone "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" sustituyelo por una clave segura
DB_PASSWORD=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DB_PASSWORD_ROOT=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Orígenes permitidos separados por comas. Usa '*' para permitir todos los orígenes (¡NO recomendado en producción!)
# Ejemplos:
# - Desarrollo: http://localhost:3000,http://localhost:4200,http://localhost:5173
# - Producción: https://tudominio.com,https://www.tudominio.com
CORS_ORIGIN=http://localhost:3000,http://localhost:4200,http://localhost:5173
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS

# Email Configuration
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_SECURE=false
MAIL_USER=
MAIL_PASS=
